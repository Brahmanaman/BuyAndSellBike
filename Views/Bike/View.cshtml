@model BuyAndSellBike.Models.ViewModel.BikeViewModel;
@using BuyAndSellBike.Extensions;

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h2 class="text-info">View Bike</h2>
<form>
   <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.MakeId" class="form-label">Make</label>
        </div>
        <div class="col-4">
            <select disabled="disabled" class="form-control text-sm-center" asp-for="Bike.MakeId" asp-items="Model.Makes.toSelectList()" id="Make"></select>
            </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.ModelId" class="form-label">Model</label>
        </div>
        <div class="col-4">
            <select disabled="disabled" class="form-control text-sm-center" asp-for="Bike.ModelId" asp-items="Model.Models.toSelectList()" id="Model"></select>
            </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Year" class="form-label"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.Year" class="form-control" />
           
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Mileage" class="form-label"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.Mileage" class="form-control" />
            
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Price" class="form-label"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.Price" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Currency" class="form-label"></label>
        </div>
        <div class="col-4">
            <select disabled="disabled" class="form-control text-sm-center" asp-for="Bike.Currency" asp-items="Model.Currencies.toSelectList()"></select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.features" class="form-label"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.features" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.SellerName" class="form-label">Seller Name</label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.SellerName" class="form-control" />
            
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.SellerEmail" class="form-label">Seller Email</label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.SellerEmail" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.SellerPhone" class="form-label">Seller Phone</label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Bike.SellerPhone" class="form-control" />
            
        </div>
    </div>

    <div class="form-group">
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>

</form>
